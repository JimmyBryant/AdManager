<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8">
    <title>Admin-创建用户</title>
    <%include ../head%>
  </head>
  <body>
      <%include ../header%>
      <div id="container">
        <div class="main-left">
          <%include ../left%>
        </div>
        <div class="main-right">
            <form method="post" actin="/admin/addUser" class="form-horizontal required-form">
                <dl class="user-sign-box">              
                    <dt><strong>创建用户</strong></dt>
                    <dd>
                       <!-- alert message -->
                       <div class="alert">
                          <button type="button" class="close" data-dismiss="alert">×</button>
                          <strong></strong><span class="mes"></span>
                       </div>
                        <div class="control-group">
                           <label  class="control-label" for="inputEmail">邮箱</label>
                            <div class="controls">                            
                            <input type="text" id="inputEmail" name="email" placeholder="Email"  class="required email">
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label" for="inputPassword">密码</label>
                            <div class="controls">
                            <input type="password" id="inputPassword" name="password" placeholder="Password" class="required">
                            </div>
                        </div>

                       <div class="control-group">
                            <label class="control-label" for="inputSecondPassword">重复密码</label>
                            <div class="controls">
                            <input type="password" id="inputSecondPassword" name="secondPassword" placeholder="Password again" class="required">
                            </div>
                       </div>

                      <div class="control-group">
                            <div class="controls">
                              <input type="submit" class="btn btn-success btn-medium" value="创建用户"/>
                            </div>
                       </div>
                    </dd>
                </dl>
            </form>
        </div>
      </div>
      <%include ../script%>
      <script type="text/javascript" >
        seajs.use('/js/validate',function  (validate) {
          validate.validateAddUser();
        });
      </script>
      <%include ../footer%>
 </body>
 </html>